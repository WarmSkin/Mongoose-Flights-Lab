<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
    <h1><%= title %></h1>
    <section>
        <div>FlightNo:</div>
        <div><%= flight.flightNo %> 
            <button><a href="/flights/<%= flight._id %>/update">Edit</a></button>
        </div>
        <div>Airline:</div>
        <div><%= flight.airline %></div>
        <div>Airport:</div>
        <div><%= flight.airport %></div>
        <div>Departs:</div>
        <div><%= flight.departs.toISOString().slice(0, 10) %></div>
        <div>Meals:</div>
        <ul>
            <% flight.meals.forEach(meal => { %>
                <li><%= meal.name %></li>
            <% }) %>
        </ul>
    </section>
    <form id="add-meal-to-flight" action="/flights/<%= flight._id %>/meals" method="POST">
        <select name="mealId">
        <% meals.forEach(meal => { %>
            <option value="<%= meal._id %>"><%= meal.name %></option>
        <% }) %>
        </select>
        <button type="submit">Add to Flight</button>
    </form>
    <h2>Tickets</h2>
    <% if (flight.tickets.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Seat</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- index is faster, but not safe! example, multiple people delete in the same time -->
                <% flight.tickets.forEach((ticket, tIndex) => { %>
                    <tr>
                        <td><%= ticket.createdAt.toLocaleDateString() %></td>
                        <td><%= ticket.seat %></td>
                        <td><%= ticket.price %></td>
                        <td>
                            <form
                                action="/flights/<%= flight._id %>/<%= tIndex %>?_method=DELETE"
                                class="delete-form"
                                method="POST"
                            >
                                <button type="submit"> X </button>
                            </form>
                        </td>
                </tr>
    <% }) %>
        </tbody>
        </table>
    <% } else { %>
        <h3>No tickets Yet</h3>
    <% } %>
    <form
        id="add-ticket-form"
        action="/flights/<%= flight._id %>/tickets"
        method="POST"
    >
        <label for="ticket-seat"> Seat:</label>
        <input type="text" name="seat" id="ticket-seat" 
            required pattern="[A-F][1-9]\d?" placeholder="A1 to F99">
        <label for="ticket-price">Price:</label>
        <input type="number" name="price" min="0">
        <button type="submit">Add Ticket</button>
    </form>
</main>

<%- include('../partials/footer') %>